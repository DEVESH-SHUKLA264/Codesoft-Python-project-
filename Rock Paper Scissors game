    ''' ROCK PAPER SCISSOR game '''
import random

def get_computer_choice():
    return random.choice(["rock", "paper", "scissors"])

def get_user_choice():
    choices = ["rock", "paper", "scissors"]
    while True:
        choice = input("Enter your choice (rock/paper/scissors): ").lower()
        if choice in choices:
            return choice
        print("Invalid input. Please choose rock, paper, or scissors.")

def determine_winner(user, comp):
    if user == comp:
        return "tie"
    wins = {
        "rock": "scissors",
        "paper": "rock",
        "scissors": "paper"
    }
    return "user" if wins[user] == comp else "comp"

def main():
    user_score = comp_score = ties = 0

    print("ðŸª¨ Welcome to Rockâ€“Paperâ€“Scissors!")
    while True:
        user = get_user_choice()
        comp = get_computer_choice()
        print(f"You chose **{user}**, computer chose **{comp}**.")

        result = determine_winner(user, comp)
        if result == "tie":
            print("It's a tie!")
            ties += 1
        elif result == "user":
            print("ðŸŽ‰ You win this round!")
            user_score += 1
        else:
            print("ðŸ˜ž Computer wins this round.")
            comp_score += 1

        print(f"Score â†’ You: {user_score} | Computer: {comp_score} | Ties: {ties}")

        again = input("Play again? (y/n): ").strip().lower()
        if again != "y":
            print("Thanks for playing! Final scores:")
            print(f"You: {user_score}, Computer: {comp_score}, Ties: {ties}")
            break

if __name__ == "__main__":
    main()
